<h1>Note list</h1>

<div id="search">
  <%= form_for(@note_search, :url => {:action => :index}, :method => :get) do |f| %>
    <%= f.label :title, 'Title' %>
    <%= f.text_field :title, :value => @note_search.title %>
    <%= f.submit I18n.t(:search_button) %>
  <% end %>
</div>

<div id="content">
<table>
  <tr>
    <th>Title</th>
    <th>ID</th>
    <th>Password</th>
    <th>Url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @notes.each do |note| %>
  <tr>
    <td><%= note.title %></td>
    <td><%= note.my_id %></td>
    <td><%= note.my_password %></td>
    <td><a href="<%= note.url %>" target="_blank"><%= note.url %></td>
    <td><%= link_to 'Show', note %></td>
    <td><%= link_to 'Edit', edit_note_path(note) %></td>
    <td><%= link_to 'Destroy', note, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

</div>

<br />

<%= link_to 'New Note', new_note_path %>
